<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <!-- アクションのパッケージ定義 -->
    <package name="default" extends="struts-default">
        <!-- クインターセプター -->
        <interceptors>
            <!-- セッションチェックインターセプター -->
            <interceptor name="cmnChk" class="jp.co.developNoticeBoard.action.cmn000.CmnChkPreProcess"/>
        </interceptors>

        <!-- セッションチェックインターセプター -->
        <!-- default-interceptor-ref name="cmnChk"/ -->

        <global-results>
            <result name="goLogin">/view/jsp/cmn001/login.jsp</result>
        </global-results>
        <!-- ログイン画面 -->
        <action name="index" class="jp.co.developNoticeBoard.action.cmn001.IndexAction" method="execute">
            <result name="success">/view/jsp/cmn001/login.jsp</result>
        </action>

        <!-- ログイン処理アクション -->
        <action name="signIn" class="jp.co.developNoticeBoard.action.cmn002.LoginAction" method="execute">

            <result name="ngProcess" type="chain">index</result>
            <result name="success" type="chain">noticeBoardMain</result>
        </action>


    </package>
</struts>