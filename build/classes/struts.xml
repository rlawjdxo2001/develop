<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <!-- アクションのパッケージ定義 -->
    <package name="default" extends="struts-default">
        <!-- クインターセプター -->
        <interceptors>
            <!-- セッションチェックインターセプター -->
            <interceptor name="cmnChk" class="jp.co.preProcess.cmnChkPreProcess"/>
        </interceptors>

        <!-- セッションチェックインターセプター -->
        <default-interceptor-ref name="cmnChk"/>

        <global-results>
            <result name="goLogin">/view/jsp/cmn001/login.jsp</result>
        </global-results>
        <!-- ログイン画面 -->
        <action name="index" class="jp.co.action.IndexAction" method="execute">
            <result name="success">/view/jsp/cmn001/login.jsp</result>
        </action>

        <!-- メイン画面_前処理 -->
        <action name="noticeBoard.main" class="jp.co.action.noticeBoardMainAction" method="execute">
            <result name="success">/view/jsp/brd001/noticeBoard.main</result>
        </action>

    </package>
</struts>